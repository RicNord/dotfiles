# shellcheck shell=bash

function cdf() {
        SEARCH_BASE="${1:-$HOME}"
        pushd "$SEARCH_BASE" > /dev/null

        NEW_DIR="$(find . -type d -print0 \
            | fzf --read0 --preview="tree -L 1 {}" --bind="space:toggle-preview" --preview-window=:hidden)"

        if [ -n "$NEW_DIR" ]; then 
            echo "not empty"
            cd "$NEW_DIR" && return
        fi

        popd > /dev/null
}

function openf() {
    find . -type f -print0 \
        | fzf -m --read0 --print0 --preview="less {}" \
        | xargs -ro -0 xdg-open 2>&-
}

function pacs() {
    sudo pacman -Sy \
        $(pacman -Ssq \
            | fzf -m --preview="pacman -Si {}" --bind="space:toggle-preview" --preview-window=:hidden)
}

function pyv() {
    source ./venv/bin/activate
}

function nown() {
    nohup "$1" > /dev/null 2>&1 &
    NOHUP_TEMP_PID=$!
    disown $NOHUP_TEMP_PID
    unset NOHUP_TEMP_PID
}

function light_inc() {
    light -A 10
}

function light_dec() {
    light -U 10
}

function cdr() {
    if git rev-parse --is-inside-work-tree > /dev/null 2>&1; then
       cd $(git rev-parse --show-toplevel) 
    else
        printf "Not in Git dir\n"
    fi
}
